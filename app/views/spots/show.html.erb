<h1><%= @spot.title %>のページ</h1>
<%= @spot.description %>

<br><br><br>

<div id="chat_start_button">お問い合わせを開始する</div>

<div id="chats_window" style="display: none;">
  <h2 style="text-align:center">お問い合わせフォーム</h2>
  <div id="chats">
  <% @chats.each do |chat|%>
    <%if chat.sender == 'user' %>
      <div class="mycomment">
        <p><%= chat.message %></p>
      </div>
    <%else%>
      <div class="fukidasi">
        <div class="faceicon">
          <img src="" alt="運営">
        </div>
        <div class="chatting">
          <div class="says">
            <p><%=chat.message%></p>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
  </div>

  <form id="send-form">
    <input type="text" id="message" placeholder="入力してね">
    <input type="submit" value="送信" id="send">
    <input id="user_ip" type="hidden" value= "<%= @user_ip %>">
    <input id="admin_id" type="hidden" value= "<%= @admin_id %>">
    <% if current_user %> <%# 本来はadminかどうかを判定する %>
      <input id="sender" type="hidden" value= "admin">
    <% else %>
      <input id="sender" type="hidden" value= "user">
    <% end %>
    <input id="spot_id" type="hidden" value= "<%= @spot.id %>">
  </form>

</div>